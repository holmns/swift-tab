{
  "name": "Safari MRU Tab Switcher",
  "description": "MRU tab switcher with HUD",
  "version": "1.2.0",
  "manifest_version": 3,
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "dist/background.js" },
  "options_ui": {
    "page": "options-dist/index.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}
